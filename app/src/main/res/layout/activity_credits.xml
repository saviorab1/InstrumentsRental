<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/transparent_background"
    tools:context=".CreditsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credits Management"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/creditsBalanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Balance: $5000"
        android:textSize="24sp"
        android:textColor="@color/purple_500"
        android:layout_marginBottom="48dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Credits"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/addCreditsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount to add"
        android:inputType="number"
        android:textSize="30sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/addCreditsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Credits"
        android:textSize="30sp"
        android:padding="12dp"/>

</LinearLayout> 